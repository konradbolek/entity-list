{
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "es2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node"],
      "resolveJsonModule": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }